{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Dependencies": {
    "UserRepository": {
      "Lifetime": "Singleton",
      "Comment": "Use 'Singleton' for InMemoryUserRepository to persist data across requests, 'Scoped' for database repositories"
    }
  },
  "JwtSettings": {
    "SecretKey": "super-secret-jwt-key-that-should-be-changed-in-production",
    "Issuer": "AuthServer",
    "Audience": "AuthServer",
    "ExpirationMinutes": "60"
  }
}